<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/light_yellow</item>
    </style>

    <style name="forButtons">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/blackish</item>
    </style>

    <style name="forButtons2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/blackish</item>
        <item name="backgroundTint">@color/light_yellow</item>
    </style>

    <!-- change font of enter app-->
    <style name="GoogleSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <style name="RobotoButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>